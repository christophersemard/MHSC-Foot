{% extends 'base.html.twig' %}

{% block title %}Staff -
	{{team[0].name}}
{% endblock %}

{% block body %}

	<main class="w-100">
		<div class="mt-5 w-100 container-md">
			<h1>Staff -
				{{team[0].name}}</h1>
		</div>

		<div class="trainers py-5 bg-white">
			<div class="container-md">
				<h2 class="squad-title">Entraineur</h2>
				<div class="cards-container d-flex flex-wrap justify-content-center justify-content-md-start gap-4">
					{% for staff in trainers %}
						<div class="player-card player-card-blue">
							<img class="player-card__background" src="/assets/images/player-card-blue.png" alt="">
							<img class="player-card__photo" src="{{ asset(staff.photo) }}" alt="Photo {{staff.lastname}}">

							<div class="player-card__infos text-white fw-bold d-flex flex-column align-items-center">
								<p class="player-card__infos__number h1 title-primary">E</p>
								{# <p>{{date('now').diff((staff.getDateOfBirth )).format('%y ans')}}</p> #}
								<p class="mb-1">{{ date().diff(date(staff.getBirthdate)).y}}
									ans</p>
								<img src="https://purecatamphetamine.github.io/country-flag-icons/3x2/{{staff.nation}}.svg" alt="Drapeau">
							</div>
							<div class="player-card__player-name bg-primary-dark  py-2 px-3">
								<h5 class="text-white m-0">{{staff.firstname}}</h5>
								<h4 class="player-card__player-name__name h1 title-mini-primary m-0">
									{{staff.lastname}}</h4>
							</div>

						</div>
					{% endfor %}
				</div>
			</div>
		</div>
		<div class="technicians py-5 bg-light">
			<div class="container-md">
