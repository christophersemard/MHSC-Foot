							<div class="player-card__infos text-secondary fw-bold d-flex flex-column align-items-center">
								<p class="player-card__infos__number h1 title-tertiary">ST</p>
								{# <p>{{ staff.getBirthdate|date('d/m/Y')}}</p> #}
