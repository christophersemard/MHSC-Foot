{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<main class="container my-5 col-lg-6">


		{% if app.user %}
			<div class="alert-success p-3 mb-4 d-flex align-items-center justify-content-between">
				Vous êtes connecté en tant que
				{{ app.user.userIdentifier }},
				<a class="btn btn-danger" href="{{ path('app_logout', {_locale: app.request.locale}) }}">Deconnexion</a>
			</div>
		{% endif %}
		<h1 class="text-primary">Inscription</h1>

		{{ form_start(registrationForm) }}
		{{ form_row(registrationForm.email) }}
		{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
		<h4 class="text-primary">Informations personnelles</h4>
		<div class="row">
			<div class="form-group col-md-6">
				{{ form_row(registrationForm.firstname) }}
			</div>
			<div class="form-group col-md-6">
				{{ form_row(registrationForm.lastname) }}
			</div>
		</div>
		{{ form_row(registrationForm.phone) }}


		<h4 class="text-primary">Adresse</h4>
		{{ form_row(registrationForm.address.address) }}
		{{ form_row(registrationForm.address.address2) }}
		<div class="row">
			<div class="form-group col-md-3">
				{{ form_row(registrationForm.address.zipcode) }}
			</div>
			<div class="form-group col-md-5">
				{{ form_row(registrationForm.address.city) }}
			</div>
			<div class="form-group col-md-4">
				{{ form_row(registrationForm.address.country) }}
			</div>
		</div>

		{{ form_row(registrationForm.agreeTerms) }}

		<button type="submit" class="btn btn-primary">S'inscrire</button>
		{{ form_end(registrationForm) }}


		{#      <div class='mt-2 d-flex flex-column gap-2'>
									<a class="btn btn-light" href="{{ path('app_google/connect', {_locale: app.request.locale}) }}" role="button" style="text-transform:none">
										<img width="20px" style="margin-bottom:3px; margin-right:5px" alt="Google sign-in" src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/512px-Google_%22G%22_Logo.svg.png"/>
										{% trans from 'messages' %}button.registerwith{% endtrans %} Google
									</a>
								</div> #}
	</main>
{% endblock %}
