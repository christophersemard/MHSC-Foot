{% extends 'admin_base.html.twig' %}

{% block title %}Catégories
{% endblock %}

{% block body %}

	<main class="p-5 w-100">
		<h1>Catégories</h1>

		<table class=" table">
			<thead>
				<tr>
					<th>Nom</th>
				</tr>
			</thead>
			<tbody>
				{% for category in categories %}
					<tr>
						<td>{{ category.name }}</td>
						<td>
							<div class="dropdown">
								<a class=" btn btn-primary" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
									<i class="fa-solid fa-pen"></i>
								</a>
								<div class="dropdown-menu  dropdown-menu-end" aria-labelledby="dropdownMenuButton">

									<a class="dropdown-item" href="{{ path('app_category_crud_show', {'id': category.id}) }}">Voir</a>
									<a class="dropdown-item text-warning" href="{{ path('app_category_crud_edit', {'id': category.id}) }}">Modifier</a>

									{{ include('category_crud/_delete_form.html.twig') }}
								</div>
							</div>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="7">Aucun article trouvé</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a class="btn btn-primary" href="{{ path('app_category_crud_new') }}">Nouvelle catégorie</a>

	</main>
{% endblock %}
