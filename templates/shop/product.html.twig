{% extends 'shop_base.html.twig' %}

{% block title %}
	{{product.name}}
{% endblock %}

{% block body %}

	<main class="w-100 mb-5 py-5">
		<div class="container">
			<div class="row mt-3 mb-4">
				<div class="col-md-4">
					<img src="{{asset("/uploads/products/" ~ product.thumbnail)}}" alt="{{ product.name }}" class="img-fluid">
				</div>
				<div class="col-md-8 d-flex flex-column">

					<div class="d-flex justify-content-between align-items-center">
						<h2 class="mt-4 mt-md-0">{{ product.name }}</h2>

						<h2>{{ product.price }}
							€</h2>
					</div>
					<hr>
					<p class="h-100">
						{{ product.description }}

					</p>
					<form class="mt-4 p-4 bg-light d-flex justify-content-between align-items-center" method="post">
						<div class="form-group">
							<label for="quantity">Quantité</label>
							<input type="number" class="form-control" id="quantity" value="1">
